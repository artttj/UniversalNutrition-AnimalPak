        <script>
            require(
                [
                    'jquery',
                    'jquery/ui',
                    'Magento_Ui/js/modal/modal'
                ],
                function($) {
                    var options = {
                        type: 'slide',
                        responsive: true,
                        innerScroll: false,
                        title: '',
                        buttons: [],
                        modalClass: 'minicart-modal',
                        trigger: '.minicart-wrapper .showcart',
                    };
                    $('#minicart-content-wrapper').modal(options);
                    $('.minicart-wrapper .showcart').on('click', function(e) {
                        e.preventDefault(); // prevent default behavior from redirecting customer
                    });
                }
            );
        </script>
        <script>
            /**
             * Checks if a variable is an HTML Element
             *
             * @param element
             * @returns {boolean}
             */
            function isElement(element) {
                return element instanceof Element || element instanceof HTMLDocument;
            }

            require(['Magento_Customer/js/customer-data'], function (customerData) {
                var cart = customerData.get('cart');
                var count = cart().summary_count;
                var displayOnAddToCart = ("<?= $autoDisplay ?>" === '1');

                if (displayOnAddToCart === false) {
                    return;
                }

                var secondsToDisplay = parseInt("<?= $secondsToDisplay ?>");
                cart.subscribe(function () {
                    try {
                        // if the count variable is not defined then we will not display the minicart.
                        if (count == null) {
                            count = cart().summary_count;
                            return;
                        }
                        if (cart().summary_count !== count) {
                            count = cart().summary_count;
                            var firstShowCartElement = document.getElementsByClassName('showcart')[0];
                            if (isElement(firstShowCartElement)) {
                                firstShowCartElement.click();
                                setTimeout(function() {
                                    document.body.querySelector('.minicart-modal button').click();
                                    }, (secondsToDisplay * 1000));
                            }
                        }
                    } catch (e) {
                       // intentionally ignoring this exception.
                    }
                });
            });
        </script>
